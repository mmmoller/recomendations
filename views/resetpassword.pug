extends layout/out

block content
    script.
        function CheckPassword(){
            if (document.getElementById('new_password').value ==
             document.getElementById('confirm_password').value &&
             document.getElementById('new_password').value != ""){
                document.getElementById('submit').disabled = false;
                document.getElementById('submit').setAttribute("class", "btn btn-primary form-group")
            }
            else{
                document.getElementById('submit').disabled = true;
                document.getElementById('submit').setAttribute("class", "btn btn-secondary form-group")
            }
        }
    .default-wrapper
        h1 Reset Password
        form(method='post')
            input.form-group(type='password', name='new_password', id='new_password', class = 'form-control', placeholder="New Password", onkeyup="CheckPassword();", required)
            input.form-group(type='password', name='confirm_password', id='confirm_password', class = 'form-control', placeholder='Confirm Password', onkeyup="CheckPassword();", required)
            button.form-group(type="submit" class="btn btn-secondary", id="submit", disabled) Reset password
        a(href="/") Go back to initial page!
    