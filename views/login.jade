extends layout

block content
	div.container(style="margin-top:30px")
		div.row
			center
				div.section-wall
					h1.text-center.login-title Digite seu nome de usuário e senha
					form(class='form-signin', action='/login/' + endereco, method='POST')
						input(type='text', name='username' class='form-control', placeholder='Usuário',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Senha', required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Login
						span.clearfix